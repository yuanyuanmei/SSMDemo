<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dm.example.dao.SysPermissionDao">

    <sql id="BaseColumns">
        id,name,type,parent_id,url,icon,permission,status,memo,sort,create_time,is_delete
    </sql>

    <!--根据角色ID查询权限-->
    <select id="getPermissionsByRoleId" resultType="SysPermissionBean" parameterType="java.lang.Integer">
        select
        account_sys_permission.*
        from account_sys_permission
        left join account_sys_role_permission on account_sys_permission.id = account_sys_role_permission.permission_id
        <where>
            account_sys_role_permission.role_id = #{roleId}
            and account_sys_permission.is_delete = 1
        </where>
    </select>

    <!--根据用户ID查询权限-->
    <select id="getPermissionsByUserId" resultType="SysPermissionBean" parameterType="java.lang.Long">
        select a.*
        from account_sys_permission a
        left join account_sys_role_permission b on a.id = b.permission_id
        left join account_sys_role c on c.id = b.role_id
        left join account_sys_role_user d on d.role_id = c.id
        where d.user_id = #{userId} and type =1
    </select>

    <select id="selectByPrimaryKey" resultType="SysPermissionBean" parameterType="java.lang.Integer">
        select
        <include refid="BaseColumns"/>
        from account_sys_permission
        <where>
            id = #{id}
        </where>
    </select>

    <select id="list" resultType="SysPermissionBean" parameterType="SysPermissionBean">
        select
        <include refid="BaseColumns"/>
        from account_sys_permission
    </select>

    <insert id="insert" parameterType="SysPermissionBean" keyProperty="id">
        insert into account_sys_permission
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null">
                id,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="type != null">
                type,
            </if>
            <if test="parentId != null">
                parent_id,
            </if>
            <if test="url != null">
                url,
            </if>
            <if test="icon != null">
                icon,
            </if>
            <if test="permission != null">
                permission,
            </if>
            <if test="status != null">
                status,
            </if>
            <if test="memo != null">
                memo,
            </if>
            <if test="sort != null">
                sort,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
            <if test="deleteStatus != null">
                is_delete,
            </if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides="," >
            <if test="id != null">
                #{id},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="type != null">
                #{type},
            </if>
