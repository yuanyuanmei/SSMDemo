            </if>
            <if test="sort != null">
                sort = #{sort},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="deleteStatus != null">
                is_delete = #{deleteStatus},
            </if>
        </set>
        where id = #{id}
    </update>

    <update id="delete" parameterType="java.lang.Integer">
        update account_sys_permission set is_delete = 2
        <where>
            id = #{id}
        </where>
    </update>
